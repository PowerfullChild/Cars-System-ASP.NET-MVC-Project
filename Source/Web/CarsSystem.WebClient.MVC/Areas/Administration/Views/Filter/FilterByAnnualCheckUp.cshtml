@model  List<CarsSystem.WebClient.MVC.Areas.Administration.Models.Filter.FilterViewModel>

@{
    ViewBag.Title = "Filter by annual check up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    WebGrid grid = new WebGrid(Model, rowsPerPage: 5);
}
<br />
<h1 class="text-center">All cars which annual check up expires soon!</h1>
<div class="row">
    <div class="col-md-12">
        @grid.GetHtml(
    tableStyle: "table table-striped table-hover form-group",
    headerStyle: "text-center",
    columns: grid.Columns(
        grid.Column("Manufacturer", "Manufacturer"),
        grid.Column("Model", "Model"),
        grid.Column("RegistrationNumber", "Registration number"),
        grid.Column("VINNumber", "Registration number"),
        grid.Column("ExpirationDate", "Valid until", format: (item) => string.Format("{0:dd/MM/yyyy}", item.ExpirationDate))
      ))
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-12 col-md-offset-2">
        @using (Html.BeginForm("FilterByAnnualCheckUp", "Filter", FormMethod.Post))
        {
            <div class="col-md-1 text-right">
                @Html.Label("Subject: ", new { @class = "control-label" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("EmailSubjectTextBox", null, new { @class = "form-control" })
            </div>
            <div class="col-md-1 text-right">
                @Html.Label("Content: ", new { @class = "control-label" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("EmailContentBox", null, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-default" value="Send e-mails to the filtered cars!" />
            </div>
        }
    </div>
</div>
