@model CarsSystem.WebClient.MVC.Areas.Administration.Models.Cars.CarDetailsViewModel

@{
    ViewBag.Title = "All cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="row">
    <h1 class="text-center">Car details page!</h1>
    <div class="well col-md-6 col-md-offset-3">
        <br />
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Manufacturer: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.Manufacturer)
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Model: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.Model)
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Type of engine: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.TypeOfEngine.ToString())
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Registration number: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.RegistrationNumber)
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("VIN number: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.VINNumber)
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Count of tyres: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.CountOfTyres.ToString())
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Count of doors: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.CountOfDoors.ToString())
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Type of car: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.TypeOfCar.ToString())
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Year of manufactoring: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.YearOfManufactoring.ToString("dd/MM/yyyy"))
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Annual check up valid until: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.ValidUntilAnnualCheckUp.ToString("dd/MM/yyyy"))
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Vignette valid until: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.ValidUntilVignette.ToString("dd/MM/yyyy"))
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Insurance valid until: ")
            </div>
            <div class="col-md-6">
                @Html.Label(Model.ValidUntilInsurance.ToString("dd/MM/yyyy"))
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Edit car's details: ")
            </div>
            <div class="col-md-6">
                @Html.ActionLink("Edit", "Edit", "Cars", new { id = Model.Id }, null)
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6 text-right">
                @Html.Label("Check car's owner: ")
            </div>
            <div class="col-md-6">
                @Html.ActionLink("Go to details", "Details", "Users", new { id = Model.CarOwnerId }, null)
            </div>
        </div>
    </div>
</div>