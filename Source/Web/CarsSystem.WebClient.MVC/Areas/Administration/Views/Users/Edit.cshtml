@model CarsSystem.WebClient.MVC.Areas.Administration.Models.UserViewModel

@{
    ViewBag.Title = "All cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="row">
    <h1 class="text-center">Edit user details page!</h1>
    <div class="well col-md-6 col-md-offset-3">
        <br />
        @using (Html.BeginForm("Edit", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("Username: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Username, new { @Value = Model.Username, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("First name: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.FirstName, new { @Value = Model.FirstName, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("Second name: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SecondName)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("Last name: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.LastName, new { @Value = Model.LastName , @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("EGN: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Egn, new { @Value = Model.Egn, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Egn)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("Number of id card: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.NumberOfIdCard, new { @Value = Model.NumberOfIdCard, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NumberOfIdCard)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("Date of issue: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.DateOfIssue, new { @Value = Model.DateOfIssue.ToString("MM/dd/yyyy"), @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(m => m.DateOfIssue)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("City: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.City)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("Phone number: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @Value = Model.PhoneNumber, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 text-right">
                    @Html.Label("E-mail: ")
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Email, new { @Value = Model.Email, @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <br />
            <div class="text-center">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <input type="submit" value="Edit user information!" class="form-control">
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
        $(function () {
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}


